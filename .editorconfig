# Set tab size for viewing files on Github.
# https://stackoverflow.com/a/33831598/3059883
# https://github.com/isaacs/github/issues/170#issuecomment-150489692
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false